{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015"
    ],
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2015",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/web3/types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/server/**/*",
    "src/common/**/*",
    "webpack/*",
    "tests"
  ]
}
